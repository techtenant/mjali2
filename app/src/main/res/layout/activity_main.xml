<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/mjalibg"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
    <EditText
        android:id="@+id/editTextname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:layout_alignBottom="@+id/location_address_view"
        android:layout_toEndOf="@+id/location_address_view"
        android:layout_toRightOf="@+id/location_address_view"
        android:background="@drawable/bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Location Name"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextlatitude"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_above="@+id/editTextlongitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="latitude"
        android:textColor="@color/white" />


        <EditText
            android:id="@+id/editTextlongitude"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/fetch_address_button"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_marginBottom="33dp"
            android:background="@drawable/bg"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="@string/longitude"
            android:textColor="@color/white" />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />
        <Button
            android:id="@+id/fetch_address_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progress_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/bg"
            android:onClick="fetchAddressButtonHandler"
            android:text="@string/fetch_address"
            android:textColor="@color/white" />



        <TextView
        android:id="@+id/location_address_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/text_margin_top"
        android:textSize="@dimen/default_text_size" />
    </LinearLayout>

</RelativeLayout>

